<main class="form-login">
    <form action="/users/log-in" method="POST">
        <h1 class="h3 mb-3 fw-normal">WireGuard Remote Management</h1>
        <%- include ('./partials/messages') %>
        <p class="mt-5 mb-3">Log in using your account credentials.</p>

        <div class="form-floating">
            <input type="email" class="form-control" id="email" name="email" placeholder="name@example.com">
            <label for="floatingInput">Email address</label>
        </div>
        <div class="form-floating">
            <input type="password" class="form-control" id="password" name="password" placeholder="Password">
            <label for="floatingPassword">Password</label>
        </div>

        <div class="mb-3">
            <a class="btn btn-link" href="reset-password" role="button">Forgot password</a>

        </div>

        <!-- <div class="checkbox mb-3">
            <label>
            <input type="checkbox" value="remember-me"> Remember me
            </label>
        </div> -->

        <button class="btn btn-lg btn-primary" type="submit">Log in</button>
    </form>
</main>